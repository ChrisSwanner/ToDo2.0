<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/css/styles.css">
    <title></title>
  </head>
  <body>
    <div class="container">
      <h1>Categories</h1>
      <hr class="style-two">
      @if (@Model.Count == 0)
      {
        <h3>No categories have been added yet!</h3>
      }
      @foreach (var category in Model)
      {
        <h3><a href='/categories/@category.GetId()'>@category.GetName()</a></h3>
      }
      <hr class="style-two">
      <form class="inline" action="/" method="get">
        <button class="btn btn-danger" type="submit" name="button">Back Home</button>
      </form>
    </div>
  </body>
</html>
