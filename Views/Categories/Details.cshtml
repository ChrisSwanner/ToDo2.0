<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/css/styles.css">
    <title></title>
  </head>
  <body>
    <div class="container">
      <h3>Here are all the items in this category:</h3>
      <ol>
        @foreach (var item in @Model["items"])
        {
          <li><a href='/category/@Model["category"].GetId()/items/@item.GetId()'>@item.GetDescription()</a></li>
        }
      </ol>
      <p><a href='/categories/@Model["category"].GetId()/items/new'>Add a new item</a></p>
      <p><a href='/categories'>Return to category list</a></p>
      <p><a href='/'>Return to Main Page</a></p>
      <form action="/items/delete" method="post">
        <button type="submit" name="button">Clear All Items</button>
    </div>
  </body>
</html>
